<h2>Lista de Categorias: </h2>

<hr>

<a href="/admin/categorias/add" class="btn btn-success">
  Nova Categoria
</a>

{{#each category}}
<div class="card mt-4">
  <div class="card-body">
    <h4>{{name}}</h4>
    <small>Slug: {{slug}}</small>
    <br>
    <small>Data de criação: {{date}}</small>
    <br>
    <a href="/admin/categorias/edit/{{_id}}" class="btn btn-success mt-2">Editar categoria</a>
    <form action="/admin/categorias/deletar" method="POST">
      <input type="hidden" name="id" value="{{_id}}">
      <button type="submit" class="btn btn-danger mt-2">Deletar categoria</button>
    </form>
  </div>
</div>

{{else}}

<h5 class="mt-3">Nenhuma categoria cadastrada.</h5>

{{/each}}